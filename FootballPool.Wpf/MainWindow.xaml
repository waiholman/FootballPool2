<Window x:Class="FootballPool.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballPool.Wpf"
        mc:Ignorable="d"
        Title="Football pool Simulator" Height="450" Width="937">
    <Grid>
        <Button x:Name="btnCreateLeague" Content="Create league" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnSimulate_Click"/>
        <Button x:Name="btnSimulateRound" Content="Simulate Round" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Click="btnSimulateRound_Click"/>
        <Button x:Name="btnSimulateWholeLeague" Content="Create &amp; Simulate whole league" HorizontalAlignment="Left" Margin="10,158,0,0" VerticalAlignment="Top" Width="184" Click="btnSimulateWholeLeague_Click"/>
        <DataGrid x:Name="dtgrdScoreboard" Margin="207,30,10,256"/>
        <TextBox x:Name="txtMatchResult" HorizontalAlignment="Left" Margin="207,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="720" Height="241"/>

    </Grid>
</Window>
